<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d4d4d4"
    tools:context="net.vantagesystems.VantageLicenseScanner.dlDetailsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imViewLogo"
        android:src="@mipmap/ic_logo"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/tvBirthDate"
        android:layout_alignEnd="@+id/tvBirthDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Age Verification Utility"
        android:id="@+id/tvVan"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imViewLogo"
        android:layout_toEndOf="@+id/imViewLogo"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView"
        android:layout_below="@+id/tvVan"
        android:layout_alignLeft="@+id/tvVan"
        android:layout_alignStart="@+id/tvVan"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#F0F8FF"
        android:id="@+id/viewTop"
        android:layout_below="@+id/imViewLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:id="@+id/tvName"
        android:layout_below="@+id/viewTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_above="@+id/tvAddress1"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toEndOf="@+id/tvName"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address 1: "
        android:id="@+id/tvAddress1"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAddressOne"
        android:layout_alignBottom="@+id/tvAddress1"
        android:layout_toRightOf="@+id/tvAddress1"
        android:layout_toEndOf="@+id/tvAddress1"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address 2: "
        android:id="@+id/tvAddress2"
        android:layout_below="@+id/tvAddress1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAddressTwo"
        android:layout_alignBottom="@+id/tvAddress2"
        android:layout_alignLeft="@+id/etAddressOne"
        android:layout_alignStart="@+id/etAddressOne"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City/State/Zip: "
        android:id="@+id/tvCity"
        android:layout_alignBottom="@+id/etCity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCity"
        android:layout_below="@+id/tvAddress2"
        android:layout_toRightOf="@+id/tvCity"
        android:layout_toEndOf="@+id/tvCity"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#F0F8FF"
        android:id="@+id/viewBottom"
        android:layout_below="@+id/etLicense"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DOB: "
        android:id="@+id/tvBirthDate"
        android:layout_below="@+id/tvCity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBirthdate"
        android:layout_alignBottom="@+id/tvBirthDate"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Expir: "
        android:id="@+id/tvExpirationDate"
        android:layout_alignBottom="@+id/etBirthdate"
        android:layout_toRightOf="@+id/etBirthdate"
        android:layout_toEndOf="@+id/etBirthdate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etExpir"
        android:layout_alignBottom="@+id/tvExpirationDate"
        android:layout_toRightOf="@+id/tvExpirationDate"
        android:layout_toEndOf="@+id/tvExpirationDate"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License#: "
        android:id="@+id/tvLicense"
        android:layout_alignBaseline="@+id/etLicense"
        android:layout_alignBottom="@+id/etLicense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLicense"
        android:textSize="12dp"
        android:layout_below="@+id/etBirthdate"
        android:layout_alignLeft="@+id/etAddressTwo"
        android:layout_alignStart="@+id/etAddressTwo" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBanned"
        android:layout_below="@+id/viewBottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
